{
    "default":{
        "tags": "@smoke",
        "formatOptions":{
            "snippetInterface": "async-await"
        },
        "paths":[
            "src/test/features"
        ],
        "dryRun": false,
        "require": [
            "src/test/steps/*.ts",
            "src/hooks/hooks.ts"
        ],
        "requireModule":[
            "ts-node/register"
        ],
        "format": [
            "html:test-results/cucumber-report.html",
            "rerun:@rerun.txt"
        ],
        "parallel": 2
    },
    "rerun":{
        "formatOptions":{
            "snippetInterface": "async-await"
        },
        "dryRun": false,
        "require": [
            "src/test/steps/*.ts",
            "src/hooks/hooks.ts"
        ],
        "requireModule":[
            "ts-node/register"
        ],
        "format": [
            "html:test-results/cucumber-report.html",
            "rerun:@rerun.txt"
        ],
        "parallel": 2
    }
}